<!-- views/auth/signup.hbs -->

<section id="section_Log_Container">
    <div class="outline_Container">
      <h2 class="log_Title">Sign-Up</h2>
      <form action="/signup" method="POST" id="form-container">
        <div class="input_Container">
          <label for="username" class="label">Username : </label>
          <input id="username" type="text" name="username" placeholder="JonSnow">
        </div>

        <div class="input_Container">
          <label for="password">Password : </label>
          <input id="password" type="password" name="password" placeholder="Your password">
        </div>

        <div class="input_Container">
          <label for="text">Email : </label>
          <input id="text" type="text" name="text" placeholder="Descriptif">
        </div>

        {{#if message}}
          <div class="error-message">{{ message }}</div>
        {{/if}}
        <div class="lower_Signup">
          <button class="custom_User_btn">Create</button>
          <p class="account-message">
            Do you already have an account?
            <a href="/login">Login</a>
          </p>
        </div>
      </form>
    </label>

</section>