<section class="section_User_Container">

  <h3 class="user_Intro">Hello <span>{{userDoc.username}}</span>, Good to see you!!</h3>

  <div class="user_Form_btn">
    <button id="create-car-form" class="custom_Form_btn">Form Car</button>
    <button id="create-piece-form"class="custom_Form_btn">Form Piece</button>
  </div>


  <h4 class="little_Space">Here is your garage my dude</h4>
  <h1 class="little_Space">CARS</h1>


    {{#each cars}}

        <div class="model_Container">
          <img src="{{this.imag}}" alt="avatar">

        <div class="model_Text_Container">
          <p>
            Marque de la voiture : {{this.carMarque}}<br>
            Model : {{this.model}}<br>
            Annee : {{this.year}}
          </p>
        <a href="/delete/{{_id}}">Delete x</a>
        </div>

        </div>

    {{/each}}


  <h1 class="little_Space">Pieces</h1>

    {{#each pieces}}

      <div class="model_Container">
        <img src="{{this.imag}}" alt="avatar">

      <div class="model_Text_Container">
        <p>
          Piece Marque : {{this.pieceMarque}}<br>
          Model : {{this.model}}<br>
          Year : {{this.year}}<br>
          Descriptif : {{this.descriptif}}
        </p>
        <a href="/deletePiece/{{_id}}">Delete x</a>
      </div>
    {{/each}}


</section>



<!-- The Modal -->
<div id="modal-car" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span id="close-car" class="close">&times;</span>
    <h2 class="title">Create a new Car</h2>

    <form method="post" enctype="multipart/form-data" action="/car" id="form_create_car" class="form">

      <div class="input_Container">
        <label for="marque" class="label_log">Marque</label>
        <input id="marque" type="text" value="foo" name="carMarque" required>
      </div>

      <div class="input_Container">
        <label for="model"class="label_log">Model</label>
        <input id="model" type="text" value="bar" name="model" required>
      </div>

      <div class="input_Container">
        <label for="color"class="label_log">color</label>
        <input id="color" type="text" value="bar" name="color" required>
      </div>

      <div class="input_Container">
        <label for="year"class="label_log">Year</label>
        <input id="year" type="number" value="1937" name="year" required>
      </div>

      <div class="input_Container">
        <label for="descriptif"class="label_log">Tell us your descriptif :</label>
        <textarea id="descriptif" name="descriptif" rows="5" cols="33">
          IMPORTANT : 
          TOUS LES TECHNICIENS, BONS OU MAUVAIS SAVENT LE FAIRE SANS DEMONTAGE EVIDEMMENT.
          MAIS SEULS LES MEILLEURS ET CEUX QUI SONT EXPÉRIMENTÉS LE FONT DANS LES RÈGLES DE L'ART AVEC DEMONTAGE. 
          NOUS MAITRISONS , EN TANT QUE PROFESSIONNEL SPECIALISE, CETTE TECHNIQUE DE POSE.
          Spécialiste.
        </textarea>
      </div>

      <div class="input_Container">
        <label for="image"class="label_log">Image</label>
        <input id="image" type="file" value="image" name="imag"></input>
      </div>

      <div class="input_Container">
        <label for="image"class="label_log"></label>
        <input id="ownerId" type="hidden" value="{{userDoc._id}}" name="ownerId"></input>
      </div>

      <button id="btn_create_user" class="btn custom_User_btn">Create</button>


    </form>
  </div>

</div>
