<h4>Affichage all cars and pieces for one user</h4>
<h1>CARS</h1>
<ul>
  {{#each cars}}
  <li>
    <p>
      <p><img src="{{this.imag}}" alt="avatar"></p>
      <p>Marque de la voiture : {{this.carMarque}}<br>
        Model : {{this.model}}<br>
        Annee : {{this.year}}</p>
      <p><a href="/delete/{{_id}}">Delete x</a></p>
  </li>
  {{/each}}
</ul>

<h1>Pieces</h1>

<ul>
  {{#each pieces}}
  <li>
    <p><img src="{{this.imag}}" alt="avatar"></p>
    <p>Piece Marque : {{this.pieceMarque}}</p>
    <p>Model : {{this.model}}<br>
      Year : {{this.year}}<br>
      Descriptif : {{this.descriptif}}</p>
    <p><a href="/deletePiece/{{_id}}">Delete x</a></p>
  </li>
  {{/each}}
</ul>

